#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "huasifei,huasifei-ws1208v2", "mediatek,mt7621-soc";

	aliases {
		led-boot = &led_status;
		led-failsafe = &led_status;
		led-running = &led_status;
		led-upgrade = &led_status;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};
	
	keys {
		compatible = "gpio-keys-polled";
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led_status: status {
			label = "green:status";
			gpios = <&gpio 12 GPIO_ACTIVE_LOW>;
		};
		
		led_4g5g: 4g5g {
			label = "green:4g5g";
			gpios = <&gpio 10 GPIO_ACTIVE_LOW>;
		};
		
		wifi {
			label = "wifi";
			gpios = <&gpio 14 GPIO_ACTIVE_LOW>;
		};
		
		wifi24 {
			label = "wifi24";
			gpios = <&gpio 5 GPIO_ACTIVE_LOW>;
		};
		
		usb {
			label = "usb";
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
		};
	};
};

&sdhci {
	status = "okay";
};

&spi0 {
	status = "okay";

	m25p80@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
				read-only;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
			};
		};
	};
};

&pcie {
	status = "okay";
};

&pcie0 {
	wifi@0,0 {
		compatible = "pci14c3,7603";
		reg = <0x0000 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x0028>;
		nvmem-cells = <&macaddr_config_0028>;
		nvmem-cell-names = "mac-address";
	};
};

&pcie1 {
	wifi@0,0 {
		compatible = "pci14c3,7662";
		reg = <0x0000 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x002E>;
		nvmem-cells = <&macaddr_config_0028>;
		nvmem-cell-names = "mac-address";
		mac-address-increment = <1>;
		ieee80211-freq-limit = <5000000 6000000>;

		led {
			led-sources = <2>;
		};
	};
};

&ethernet {
	pinctrl-0 = <&mdio_pins>, <&rgmii1_pins>;
};

&gmac0 {
	nvmem-cells = <&macaddr_factory_004>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <2>;
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan1";
		};

		port@1 {
			status = "okay";
			label = "lan2";
		};

		port@2 {
			status = "okay";
			label = "lan3";
		};

		port@3 {
			status = "okay";
			label = "lan4";
		};

		port@4 {
			status = "okay";
			label = "wan";
			nvmem-cells = <&macaddr_factory_004>;
			nvmem-cell-names = "mac-address";
			mac-address-increment = <3>;
		};
	};
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "wdt", "rgmii2", "jtag", "mdio", "ic2", "uart1", "uart2", "uart3";
			ralink,function = "gpio";
		};
	};
};

&factory {
	compatible = "nvmem-cells";
	#address-cells = <1>;
	#size-cells = <1>;

	macaddr_factory_004: macaddr@004 {
		reg = <0x004 0x6>;
	};
	
	macaddr_config_0028: macaddr@0028 {
		reg = <0x0004 0x6>;
	};
};